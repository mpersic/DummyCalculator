<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:textColor="@color/numberButton"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:textColor="@color/numberButton"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClear"
                android:text="CE"
                style="@style/ActionButtonStyle">
            </TextView>

            <TextView
                android:id="@+id/tvOpenedParenthesis"
                android:text="("
                style="@style/ActionButtonStyle">
            </TextView>

            <TextView
                android:id="@+id/tvClosedParenthesis"
                android:text=")"
                style="@style/ActionButtonStyle">
            </TextView>

            <TextView
                android:id="@+id/tvDivision"
                android:text="/"
                style="@style/ActionButtonStyle">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSeven"
                android:text="7"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvEight"
                android:text="8"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvNine"
                android:text="9"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvMultiplication"
                android:text="*"
                style="@style/ActionButtonStyle">
            </TextView>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFour"
                android:text="4"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvFive"
                android:text="5"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvSix"
                android:text="6"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvMinus"
                android:text="-"
                style="@style/ActionButtonStyle">
            </TextView>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOne"
                android:text="1"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvTwo"
                android:text="2"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvThree"
                android:text="3"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvPlus"
                android:text="+"
                style="@style/ActionButtonStyle">
            </TextView>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
                android:text="."
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvZero"
                android:text="0"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvDelete"
                android:text="DEL"
                style="@style/NumberButtonStyle">
            </TextView>
            <TextView
                android:id="@+id/tvEquals"
                android:text="="
                style="@style/ActionButtonStyle">
            </TextView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>